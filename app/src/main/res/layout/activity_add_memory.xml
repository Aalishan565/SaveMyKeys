<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarAddMemory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:titleTextColor="@color/colorWhite" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMemoryTitle"
        style="@style/TilOutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbarAddMemory">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMemoryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Memory / Note title"
            android:inputType="textCapSentences"
            android:maxLength="100"
            android:maxLines="2"
            android:minHeight="@dimen/dimen_50dp"
            android:textSize="@dimen/dimen_20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMemoryDate"
        style="@style/TilOutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilMemoryTitle">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMemoryDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Choose Memory / Note date"
            android:imeOptions="actionNext"
            android:inputType="date"
            android:maxLength="100"
            android:maxLines="1"
            android:minHeight="@dimen/dimen_50dp"
            android:textSize="@dimen/dimen_20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilMemoryNote"
        style="@style/TilOutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilMemoryDate">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etMemoryNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|top"
            android:hint="@string/add_some_note_here"
            android:inputType="textCapSentences|textMultiLine"
            android:maxLength="200"
            android:maxLines="3"
            android:minHeight="@dimen/dimen_150dp"
            android:textSize="@dimen/dimen_20sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btnSaveMemory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@color/colorPrimary"
        android:minHeight="@dimen/dimen_50dp"
        android:text="@string/save"
        android:textColor="@color/colorWhite"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tilMemoryNote" />

</androidx.constraintlayout.widget.ConstraintLayout>